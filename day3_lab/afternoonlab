#include <stdio.h>

void readMarks(int n, int m, int marks[n][m]) {
    for (int i = 0; i < n; i++) {
        printf("Enter marks for student %d (space-separated): ", i + 1);
        for (int j = 0; j < m; j++) {
            scanf("%d", &marks[i][j]);
        }
    }
}

void calculateTotalMarks(int n, int m, int marks[n][m], int totalMarks[n]) {
    for (int i = 0; i < n; i++) {
        totalMarks[i] = 0;
        for (int j = 0; j < m; j++) {
            totalMarks[i] += marks[i][j];
        }
    }
}

void sortStudents(int n, int totalMarks[n], int sortedIndices[n]) {
    for (int i = 0; i < n; i++) {
        sortedIndices[i] = i;
    }

    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (totalMarks[sortedIndices[j]] < totalMarks[sortedIndices[j + 1]]) {
                int temp = sortedIndices[j];
                sortedIndices[j] = sortedIndices[j + 1];
                sortedIndices[j + 1] = temp;
            }
        }
    }
}

void displaySortedStudents(int n, int m, int marks[n][m], int totalMarks[n], int sortedIndices[n]) {
    printf("\nSorted Students by Total Marks:\n");
    for (int i = 0; i < n; i++) {
        int index = sortedIndices[i];
        printf("Student %d: Total Marks = %d, Marks = ", index + 1, totalMarks[index]);
        for (int j = 0; j < m; j++) {
            printf("%d ", marks[index][j]);
        }
        printf("\n");
    }
}

int main() {
    int n, m;

    printf("Enter the number of students: ");
    scanf("%d", &n);
    printf("Enter the number of subjects: ");
    scanf("%d", &m);

    int marks[n][m]; 
    int totalMarks[n]; 
    int sortedIndices[n];

    readMarks(n, m, marks);

    calculateTotalMarks(n, m, marks, totalMarks);

    sortStudents(n, totalMarks, sortedIndices);

    displaySortedStudents(n, m, marks, totalMarks, sortedIndices);

    return 0;
}
